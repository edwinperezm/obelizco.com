# Enable package-lock.json
package-lock=true

# Set the engine-strict flag to ensure compatibility
engine-strict=true

# Set the Node.js version requirement
node-version=20.x

# Enable strict SSL for package downloads
strict-ssl=true

# Set the registry to the default npm registry
registry=https://registry.npmjs.org/

# Set the cache directory
cache=${HOME}/.npm/_cacache

# Set the prefer-offline flag to use the cache when possible
prefer-offline=true

# Set the fetch-retry settings
fetch-retries=3
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Set the network concurrency
network-concurrency=1

# Set the log level
loglevel=error

# Set the save-prefix
save-prefix=^

# Set the save-exact flag to ensure exact versions
save-exact=true

# Set the package-lock-only flag
package-lock-only=false

# Set the progress flag
progress=false

# Set the fund flag
fund=false

# Set the audit flag
audit=false

# Set the bin-links flag
bin-links=true

# Set the scripts-prepend-node-path flag
scripts-prepend-node-path=true

# Set the update-notifier flag
update-notifier=false

# Set the depth flag
depth=0
